{
  /*
  ---------------------------------------
  EDITOR APPEARANCE & BEHAVIOR
  ---------------------------------------
  */
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.lineNumbers": "relative",
  "editor.wordWrap": "on",
  "editor.fontSize": 16,
  "editor.lineHeight": 1.6,
  "editor.suggestFontSize": 13,
  "editor.suggestLineHeight": 25,
  "editor.fontLigatures": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.linkedEditing": true,
  "editor.minimap.autohide": "mouseover",
  "editor.minimap.showSlider": "always",
  "editor.occurrencesHighlight": "off",
  "editor.renderWhitespace": "none",
  "editor.renderLineHighlight": "all",
  "editor.stickyScroll.enabled": false,
  "editor.cursorSurroundingLines": 10,
  "editor.fontFamily": "Dank Mono",

  /*
  ---------------------------------------
  TERMINAL SETTINGS
  ---------------------------------------
  */
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.fontSize": 13,

  /*
  ---------------------------------------
  WORKBENCH & UI
  ---------------------------------------
  */
  "workbench.list.smoothScrolling": true,
  "workbench.settings.editor": "json",
  "workbench.iconTheme": "catppuccin noctis icons",
  "workbench.productIconTheme": "Tabler",
  "workbench.editor.decorations.badges": false,
  "workbench.panel.showLabels": false,
  "workbench.colorTheme": "Everforest Dark",
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 10,
  "explorer.compactFolders": false,
  "explorer.confirmPasteNative": false,
  "explorer.decorations.colors": false,
  "breadcrumbs.enabled": false,
  "window.title": "üèóÔ∏è ${folderName}",
  // "window.density.editorTabHeight": "compact",
  "window.commandCenter": false,
  "workbench.tree.enableStickyScroll": false,

  /*
  ---------------------------------------
  ICONS / THEMES (EXTENSIONS)
  ---------------------------------------
  */
  "catppuccin-noctis-icons.hidesExplorerArrows": true,
  /*

  ---------------------------------------
  CUSTOM UI STYLES (EXTENSIONS)
  ---------------------------------------
  */
  "custom-ui-style.font.sansSerif": "Dank Mono",

  /*
  ---------------------------------------
  FIND / SEARCH HIGHLIGHT COLORS
  ---------------------------------------
  */
  "workbench.colorCustomizations": {
    "editorCursor.background": "#2e3d46",
    "editorCursor.foreground": "#b8d69a",
    "editor.findMatchBackground": "#593b48",
    "editor.findMatchBorder": "#ed879633",
    "editor.findMatchHighlightBackground": "#3e535fee",
    "editor.findMatchHighlightBorder": "#91d7e333",
    "editor.findRangeHighlightBackground": "#3e535fee",
    "editor.findRangeHighlightBorder": "#91d7e333",
    "editor.focusedStackFrameHighlightBackground": "#a6da9526",

    "activityBar.border": "#3B4447",
    "titleBar.border": "#3B4447",
    "sideBar.border": "#3B4447",
    "tab.border" : "#3B444799",
    "statusBar.border": "#3B4447",
    "editorGroup.border": "#3B4447",
    "editorGroupHeader.tabsBorder": "#3B4447",
    "panel.border": "#3B4447",
    "editorGroupHeader.border": "#3B4444",
    "statusBar.background": "#2E353A",
    "editor.background": "#293136",
    "activityBar.activeBackground": "#333C4388",
  },

  /*
  ---------------------------------------
  REFERENCES & DATABASE CLIENT
  ---------------------------------------
  */
  "references.preferredLocation": "view",

  /*
  ---------------------------------------
  VIM EXTENSION SETTINGS
  ---------------------------------------
  */
  "vim.enableNeovim": true,
  "vim.leader": "<space>",
  "vim.foldfix": true,
  "vim.textwidth": 200,
  "vim.useSystemClipboard": true,

  // HandleKeys (delegate to VSCode instead of Vim)
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-p>": false,
    "<C-y>": false
  },

  // Insert Mode Mappings
  "vim.insertModeKeyBindings": [{ "before": ["j", "j"], "after": ["<Esc>"] }],

  // Normal Mode Mappings
  "vim.normalModeKeyBindings": [
    { "before": ["<C-d>"], "after": ["<C-d>", "z", "z"] },
    { "before": ["<C-u>"], "after": ["<C-u>", "z", "z"] },
    { "before": ["n"], "after": ["n", "z", "z"] },
    { "before": ["N"], "after": ["N", "z", "z"] }
  ],

  // Visual Mode Mappings
  "vim.visualModeKeyBindings": [
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
  ],

  // Visual Mode Non-Recursive
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["p"], "after": ["p", "g", "v", "y"] }
  ],

  // Extension Affinity (Performance)
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

  /*
  ---------------------------------------
  LINTERS / LANGUAGE-SPECIFIC
  ---------------------------------------
  */
  "css.lint.unknownAtRules": "ignore",
  "workbench.editor.showTabs": "single"
}
